<div class="page-header">
  <h1><%= @reading_group.name %></h1>
</div>

<p>
  <strong> <%= t('description') %></strong>
  <%= @reading_group.description %>
</p>

<hr />

<h2> <%= t('readings') %> </h2>

<% if reading_groups_owner? @reading_group.id %><%= link_to  t('new_reading') , new_reading_group_reading_path(@reading_group,), class: 'btn btn-primary' %><% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th> <%= t('label') %></th>
      <th> <%= t('grade_show') %> </th>
      <th> <%= t('color') %></th>
    </tr>
  </thead>

  <tbody>
    <% reading_group_readings = @reading_group.readings %>
    <% if reading_group_readings.size == 0 %>
      <%= render partial: 'no_readings' %>
    <% else %>
      <%= render partial: 'reading', collection: reading_group_readings, as: :reading %>
    <% end %>
  </tbody>
</table>

<hr />

<p>
  <% if reading_groups_owner? @reading_group.id %>
    <%= link_to t('destroy_reading_group'), reading_group_path(@reading_group.id), method: :delete, data: { confirm:  t('want_destroy_reading') }, class: 'btn btn-danger' %>
  <% end %>
</p>
