<div class="page-header">
  <h1><%= t('reading_groups') %></h1>
</div>

<% if user_signed_in? %>
  <p>
    <%= link_to t('new_reading_group'), new_reading_group_path, class: 'btn  btn-primary' %>
  </p>
<%else%>
  <p class="alert alert-warning alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
     <%= t('must_logged_create_reading_groups') %>
  </p>
<% end %>

<%= render partial: 'shared/reading_groups_list', locals: {reading_groups: @reading_groups} %>