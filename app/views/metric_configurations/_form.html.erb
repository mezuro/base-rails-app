<%= render :partial => 'shared/form_errors', :locals => {:object => @metric_configuration} %>

<div class="row margin-left-none">
  <div class="form-table col-md-9">

    <div class="form-row">
      <div class="field-container">
        <%= f.label :weight, class: 'control-label' %>
        <%= f.text_field :weight, :required => true, class: 'text-field form-control' %>
      </div>
      <div class="help-container">
        <p>
           <%= t('body2_compound_form') %> <%= link_to t('module'),  tutorials_path( t('keywords'), anchor: "module")%> <%= t('grade') %>
        </p>
      </div>
    </div>

    <div class="form-row">
      <div class="field-container">
        <%= f.label :aggregation_form, t('metric_configurations_aggregation'), class: 'control-label' %>
        <%= f.select( :aggregation_form, aggregation_options, {class: 'form-control'} ) %>
      </div>
      <div class="help-container">
        <p>
           <%= t('statistical_result_metric_configurations_form') %> <%= link_to t('granularity'), tutorials_path( t('keywords'), anchor: t('granularity')) %>  <%= t('modules_eg_metric_configurations_form') %>
        </p>
      </div>
    </div>

    <% if @metric_configuration.persisted? %>
      <%= hidden_field_tag(:reading_group_id, @metric_configuration.reading_group_id) %>
    <% else %>
        <div class="form-row">
          <div class="field-container">
            <%= f.label :reading_group_id, t('reading_group'), class: 'control-label' %>
            <%= f.select( :reading_group_id, reading_group_options, {class: 'form-control'} ) %>
          </div>
          <div class="help-container">
            <p>
               <%= t('the') %><%= link_to t('reading_group'), tutorials_path( t('keywords'), anchor: 'reading-group') %>  <%= t('associated_metric_configuration_form') %>
            </p>
          </div>
        </div>
    <% end %>
  </div>
</div>

<%= hidden_field_tag(:metric_name, @metric_configuration.metric.name) %>
<%= hidden_field_tag(:metric_collector_name, @metric_configuration.metric_collector_name) %>
