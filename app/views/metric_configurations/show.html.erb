<div class="page-header">
  <h1><%=@metric_configuration.metric.name %></h1>
</div>

<p>
  <strong> <%= t('metric_configurations_base_tool_name') %> </strong>
  <%= @metric_configuration.metric_collector_name %>
</p>

<p>
  <strong> <%= t('code') %> </strong>
  <%= @metric_configuration.code %>
</p>

<p>
  <strong> <%= t('weight') %> </strong>
  <%= @metric_configuration.weight %>
</p>

<p>
  <strong>  <%= t('language') %></strong>
  <%= @metric_configuration.metric.language %>
</p>

<p>
  <strong> <%= t('scope') %></strong>
  <%= @metric_configuration.metric.scope %>
</p>

<p>
  <strong> <%= t('metric_configurations_aggregation') %></strong>
  <%= @metric_configuration.aggregation_form %>
</p>

<p>
  <strong> <%= t('metric_configurations_reading_group') %></strong>
  <%= @reading_group.name %>
</p>

<p>
  <strong> <%= t('description') %></strong>
  <% if @metric_configuration.metric.description.nil? %>
    <%= t('no_description')  %>
  <% else %>
    <%= @metric_configuration.metric.description %> 
  <% end %>

</p>
<hr>

<h2>  <%= t('ranges') %></h2>
<% if mezuro_configuration_owner? @metric_configuration.configuration_id %>
  <%= link_to t('add_range'), mezuro_configuration_metric_configuration_new_mezuro_range_path(@metric_configuration.configuration_id, 
      @metric_configuration.id), class: 'btn btn-info' %>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th> <%= t('label') %></th>
      <th> <%= t('beginning') %></th>
      <th> <%= t('end') %></th>
    </tr>
  </thead>
  <tbody>
    <% if @mezuro_ranges.empty? %>
      <%= render partial: 'no_ranges' %>
    <% else %>
      <%= render partial: 'ranges', collection: @mezuro_ranges, as: :mezuro_range %>
    <% end %>
  </tbody>
</table>

<p>
 <%= link_to t('back'), mezuro_configuration_path(@metric_configuration.configuration_id), class: 'btn btn-default' %>
<% if mezuro_configuration_owner? @metric_configuration.configuration_id %>
      <%= link_to t('destroy_metric_configuration'), mezuro_configuration_metric_configuration_path(@metric_configuration.configuration_id,
      @metric_configuration.id), method: :delete, data: { confirm:  t('sure_destroy_metric_configuration')}, 
      class: 'btn btn-danger' %>
 <% end %>
</p>


<%= javascript_include_tag "popover.js" %>
