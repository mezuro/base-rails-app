<div class="page-header">
  <h1> <%= t('login_mezuro') %></h1>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => { :class => "form-inline" }) do |f| %>
  <div class="row margin-left-none">
    <div class="form-table col-md-9">
      <div class="form-row">
        <div class="field-container">
          <%= f.label :email, t('email'), class: "control-label " %>
          <%= f.email_field :email, autofocus: true, tabindex: 1, class: 'text-field form-control' %>
        </div>
        <div class="help-container">
          <p>
             <%= t('email_address') %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row margin-left-none">
    <div class="form-table col-md-9">
      <div class="form-row">
        <div class="field-container">
          <%= f.label :password, t('password'), class: "control-label" %>
          <%= f.password_field :password, tabindex: 2, class: 'text-field form-control' %>
        </div>
        <div class="help-container">
          <p>
             <%= t('forgot_password_follow') %> <a href="/users/password/new">link</a>  <%= t('reset_it') %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="row margin-left-none">
    <div class="form-table col-md-9">
      <div class="form-row">
        <div class="field-container">
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me, class: "checkbox" %> <%= f.label :remember_me, t('remember_me') %>
            </label>
          </div>
        </div>
        <div class="help-container">
          <p>
             <%= t('stay_logged') %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% end -%>

  <div class="row margin-left-none" style="margin-top: 20px">
    <%= f.submit t('sign_in'), class: 'btn btn-primary', :tabindex => 3 %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
