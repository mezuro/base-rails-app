<div class="page-header">
  <h1><%= t('.sign_in', :default => "Sign in") %></h1>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="row margin-left-none">
    <div class="form-table col-md-9">
      <div class="form-row">
        <div class="field-container">
          <%= f.label :email %><br />
          <%= f.email_field :email %>
        </div>
        <div class="help-container">
          <p>
            The same email address used to sign up.
          </p>
        </div>
      </div>

      <div class="form-row">
        <div class="field-container">
          <%= f.label :password %><br />
          <%= f.password_field :password %>
        </div>
        <div class="help-container">
          <p>
            If you forgot your password, follow this <a href="/users/password/new">link</a> to reset it.
          </p>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-row">
          <div class="field-container">
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          </div>
          <div class="help-container">
            <p>
              Stay logged in.
            </p>
          </div>
        </div>
      <% end -%>
    </div>
  </div>

  <div class="row margin-left-none" style="margin-top: 20px">
    <%= f.submit t('.sign_in', :default => "Sign in"), class: 'btn btn-primary', :tabindex => 3 %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
