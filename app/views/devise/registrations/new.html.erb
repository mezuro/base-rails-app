<div class="page-header">
  <h1>  <%= t('sign_up') %> </h1>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => { :class => "form-inline" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row margin-left-none">
    <div class="form-table col-md-9">
      <div class="form-row">
        <div class="field-container">
          <%= f.label :name, t('name') ,class: 'control-label' %><br />
          <%= f.text_field :name, :autofocus => true, class: 'text-field form-control' %>
        </div>
        <div class="help-container">
          <p>
             <%= t('full_name') %>
          </p>
        </div>
      </div>

      <div class="form-row">
        <div class="field-container">
          <%= f.label :email, t('email'), class: 'control-label' %><br />
          <%= f.email_field :email, class: 'text-field form-control' %>
        </div>
        <div class="help-container">
          <p>
             <%= t('email_communication_channel') %>
          </p>
        </div>
      </div>

      <div class="form-row">
        <div class="field-container">
          <%= f.label :password, t('password'), class: 'control-label' %><br />
          <%= f.password_field :password, class: 'text-field form-control' %>
        </div>
        <div class="help-container">
          <p>
             <%= t('password_rules') %>
          </p>
        </div>
      </div>

      <div class="form-row">
        <div class="field-container">
          <%= f.label :password_confirmation, t('password_confirmation'), class: 'control-label' %><br />
          <%= f.password_field :password_confirmation, class: 'text-field form-control' %>
        </div>
        <div class="help-container">
          <p>
             <%= t('confirm_password') %>
          </p>
        </div>
      </div>
    </div>

  </div> <!--row-->

  <div class="row margin-left-none" style="margin-top: 20px">
    <%= f.submit t('sign_up') , class: 'btn btn-primary col-md-2' %>
  </div>
<% end %>
