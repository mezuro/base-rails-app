<div class="page-header">
  <h1> <%= t('edit_user') %> </h1>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-inline" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row margin-left-none">
    <div class="form-table col-md-9">
      <div class="form-row">
        <div class="field-container">
          <%= f.label :name, class: 'control-label' %><br />
          <%= f.text_field :name, :autofocus => true, class: 'text-field form-control' %>
        </div>
        <div class="help-container">
          <p>
             <%= t('full_name') %>
          </p>
        </div>
      </div>

      <div class="form-row">
        <div class="field-container">
          <%= f.label :email, class: 'control-label' %><br />
          <%= f.email_field :email, class: 'text-field form-control' %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div> <%= t('currently_waiting_confirmation') %> <%= resource.unconfirmed_email %></div>
          <% end %>
        </div>
        <div class="help-container">
          <p>
             <%= t('email_communication_channel') %>
          </p>
        </div>
      </div>

      <div class="form-row">
        <div class="field-container">
          <%= f.label :password,t('password'), class: 'control-label' %> <i> <%= t('leave_blank_wont_change') %></i><br />
          <%= f.password_field :password, :autocomplete => "off", class: 'text-field form-control' %>
        </div>
        <div class="help-container">
          <p>
             <%= t('password_rules') %>
          </p>
        </div>
      </div>

      <div class="form-row">
        <div class="field-container">
          <%= f.label :password_confirmation, t('password_confirmation'),class: 'control-label' %><br />
          <%= f.password_field :password_confirmation, class: 'text-field form-control' %>
        </div>
        <div class="help-container">
          <p>
             <%= t('confirm_password') %>
          </p>
        </div>
      </div>

      <div class="form-row">
        <div class="field-container">
          <%= f.label :current_password,t('current_password'), class: 'control-label' %><br />
          <%= f.password_field :current_password, class: 'text-field form-control' %>
        </div>
        <div class="help-container">
          <p>
            <%= t('current_password_changes') %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row margin-left-none" style="margin-top: 20px">
    <%= f.submit t('update'), class: 'btn btn-primary col-md-2' %>
  </div>
<% end %>

<hr />

<h2> <%= t('cancel_account') %></h2>

<p><%= t('unhappy') %> <%= button_to  t('cancel_account'), registration_path(resource_name), :data => { :confirm =>  t('really_want_cancel_account') }, :method => :delete, class: 'btn btn-danger' %></p>
