<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% reading_groups.each do |reading_group| %>
      <tr>
        <td><%= reading_group.name %></td>
        <td><%= reading_group.description %></td>
        <td data-toggle="tooltip" data-placement="left" title="Show this Reading Group"><%= link_to 'Show', reading_group_path(reading_group.id), class: 'btn btn-info' %></td>
        <td>
          <% if reading_groups_owner? reading_group.id %>
          <span data-toggle="tooltip" data-placement="left" title="Edit this Reading Group">
            <%= link_to 'Edit', edit_reading_group_path(reading_group.id), class: 'btn btn-info' %></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>