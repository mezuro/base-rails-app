<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td  data-toggle="tooltip" data-placement="left" title="Show this project overview"><%= link_to 'Show', project_path(project.id), class: 'btn btn-info' %></td>
        <td>
          <% if project_owner? project.id %>
            <%= link_to 'Edit', edit_project_path(project.id), class: 'btn btn-info' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>