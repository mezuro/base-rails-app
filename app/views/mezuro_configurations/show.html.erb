<div class="page-header">
  <h1><%= @mezuro_configuration.name %></h1>
</div>

<p>
  <strong>Description:</strong>
  <%= @mezuro_configuration.description %>
</p>

<hr>

<h2> Metrics </h2>
<% if mezuro_configuration_owner? @mezuro_configuration.id %>
   <p data-toggle="tooltip" data-placement="left" title="Add an existing metric"><%= link_to 'Add Metric', mezuro_configuration_choose_metric_path(@mezuro_configuration.id), class: 'btn btn-info' %></p>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Metric Name</th>
      <th>Code</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if Rails.cache.read("#{@mezuro_configuration.id}_metric_configurations").empty? %>
      <%= render partial: 'no_metric_configurations' %>
    <% else %>
      <%= render partial: 'metric_configurations', collection: Rails.cache.read("#{@mezuro_configuration.id}_metric_configurations"), as: :metric_configuration %>
    <% end %>
  </tbody>
</table>

<hr>

<p  data-toggle="tooltip" data-placement="left" title="Return to configurations list">
 <%= link_to 'Back', mezuro_configurations_path, class: 'btn btn-default' %>
 <% if mezuro_configuration_owner? @mezuro_configuration.id %>
   <span data-toggle="tooltip" data-placement="left" title="Remove this configuration">
   <%= link_to 'Destroy Configuration', mezuro_configuration_path(@mezuro_configuration.id), method: :delete, data: { confirm: 'Are you sure that you want to destroy this Configuration?' }, class: 'btn btn-danger' %>
   </span>
 <% end %>
</p>
