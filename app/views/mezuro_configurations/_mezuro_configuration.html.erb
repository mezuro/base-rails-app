<tr>
  <td><%= mezuro_configuration.name %></td>
  <td><%= mezuro_configuration.description %></td>
  <td data-toggle="tooltip" data-placement="left" title="Show this configuration"><%= link_to 'Show', mezuro_configuration_path(mezuro_configuration.id), class: 'btn btn-info' %></td>
  <td>
    <% if mezuro_configuration_owner?(mezuro_configuration.id) %>
      <p data-toggle="tooltip" data-placement="left" title="Edit this configuration"><%= link_to 'Edit', edit_mezuro_configuration_path(mezuro_configuration.id), class: 'btn btn-info' %>
    </p>
    <% end %>
  </td>
</tr>