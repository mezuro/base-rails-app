<div class="page-header">
  <h1><%= t("projects") %></h1>
</div>

<% if user_signed_in? %>
  <p>
    <%= link_to t('new_project'), new_project_path, class: 'btn  btn-primary' %>
  </p>
<%else%>
  <p class="alert alert-warning alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <%= t('must_logged_create_projects') %>
  </p>
<% end %>

<%= render partial: 'shared/project_list', locals: {projects: @projects} %>
