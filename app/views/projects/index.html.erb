<div class="page-header">
  <h1><%= "#{Project.model_name.human(count: 2)}" %></h1>
</div>

<% if user_signed_in? %>
  <p>
    <%= link_to t('create', model: Project.model_name.human), new_project_path, class: 'btn  btn-primary' %>
  </p>
<%else%>
  <p class="alert alert-warning alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <%= "#{t('unauthenticated', action: t("create", model: Project.model_name.human(count: 2)).downcase)}" %>
  </p>
<% end %>

<%= render partial: 'shared/project_list', locals: {projects: @projects} %>
